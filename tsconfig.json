{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "lib": ["ES2015"],
    "allowJs": false,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "functions", "public"]
}
